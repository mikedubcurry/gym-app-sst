generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model gyms {
  id          Int       @id @default(autoincrement())
  name        String?   @db.VarChar(128)
  address     String?   @db.VarChar(128)
  city        String?   @db.VarChar(128)
  state       String?   @db.VarChar(2)
  postal_code String?   @db.VarChar(10)
  created_at  DateTime? @default(now()) @db.Timestamp(0)
  updated_at  DateTime? @default(now()) @db.DateTime(0)
  members     members[]
  schedules   schedules @relation(fields: [schedulesId], references: [id])
  schedulesId Int
}

model members {
  id         Int       @id @default(autoincrement())
  first_name String?   @db.VarChar(64)
  last_name  String?   @db.VarChar(64)
  email      String?   @db.VarChar(64)
  created_at DateTime? @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.DateTime(0)
  gym_id     Int
  role_id    Int
  gym        gyms      @relation(fields: [gym_id], references: [id])
  role       roles     @relation(fields: [role_id], references: [id])
}

model roles {
  id      Int       @id @default(autoincrement())
  name    String?   @db.VarChar(64)
  members members[]
}

model schedules {
  id         Int     @id @default(autoincrement())
  gym_id     Int?
  day        String? @db.VarChar(8)
  time_start String? @db.VarChar(5)
  duration   Int?
  class      String? @db.VarChar(64)
  gyms       gyms[]
}
